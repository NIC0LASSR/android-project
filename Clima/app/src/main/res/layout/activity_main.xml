<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <!-- Contenedor principal -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <!-- Encabezado Nombre Aplicación -->
        <TextView
            android:id="@+id/headerCard_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Clima"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="38sp"
            android:textStyle="bold" />

        <!-- Ciudad / Ubicación Actual -->
        <LinearLayout
            android:id="@+id/cityContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/cityCard_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- Información del Clima -->
        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white"
            android:elevation="4dp">

            <!-- Información de Latitud y Longitud -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lat/Long:"
                    android:textSize="18sp"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/coordinator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitud , Longitud"
                    android:textSize="18sp"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>

            <!-- Información del Clima General -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clima:"
                    android:textSize="18sp"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="18sp"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>

            <!-- Información de Temperatura -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Temperatura:"
                    android:textSize="18sp"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--°C"
                    android:textSize="18sp"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>

            <!-- Información de Velocidad del Viento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Velocidad del viento:"
                    android:textSize="18sp"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/windSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- km/h"
                    android:textSize="18sp"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
