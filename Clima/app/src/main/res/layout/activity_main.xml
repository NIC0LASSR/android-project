<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".MainActivity">
<!--android:background="@drawable/demo" -->
    <!-- TextView para mostrar el nombre de la ciudad -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:padding="5dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <!-- Nombre Aplicacion-->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0065D9FF"
            app:cardCornerRadius="10dp"
            app:cardElevation="11dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/headerCard_text"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Clima"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!--Ciudad//Ubicacion actual-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="11dp"
            app:cardBackgroundColor="@color/cardview_dark_background">
            <!-- app:cardUseCompatPadding="true"-->

            <LinearLayout
                android:id="@+id/cityLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cityCard_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Ubicación"
                    android:textColor="@color/material_dynamic_neutral40"
                    android:textSize="24sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Tabla-->
        <androidx.cardview.widget.CardView
            android:id="@+id/tableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="11dp"
            app:cardBackgroundColor="@color/cardview_dark_background">

            <LinearLayout
                android:id="@+id/tableLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <!-- TableLayout para mostrar la información del clima -->

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <!-- Fila 1: Latitud y longitud -->
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lat/Long:"
                            android:textSize="18sp"
                            android:padding="8dp"/>
                        <TextView
                            android:id="@+id/coordinator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latitud , Longitud"
                            android:textSize="18sp"
                            android:padding="8dp"/>
                    </TableRow>

                    <!-- Fila 2: Clima general -->
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clima:"
                            android:textSize="18sp"
                            android:padding="8dp"/>
                        <TextView
                            android:id="@+id/weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="18sp"
                            android:padding="8dp"/>
                    </TableRow>

                    <!-- Fila 3: Temperatura -->
                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:text="Temperatura:"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--°C"
                            android:textSize="18sp"
                            android:padding="8dp"/>
                    </TableRow>

                    <!-- Fila 4: Velocidad del viento -->
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Velocidad del viento:"
                            android:textSize="18sp"
                            android:padding="8dp"/>
                        <TextView
                            android:id="@+id/windSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- km/h"
                            android:textSize="18sp"
                            android:padding="8dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>